<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="icon" href="https://tingtong.vn/wp-content/uploads/2024/08/cropped-logo-hoang-nguyen-1-1-1-32x32.png" sizes="32x32">
    <link rel="icon" href="https://tingtong.vn/wp-content/uploads/2024/08/cropped-logo-hoang-nguyen-1-1-1-192x192.png" sizes="192x192">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <div class="logo">
                <i class="fas fa-home"></i>
                <span>PhongTro Manager</span>
            </div>
            <button class="mobile-toggle" id="mobile-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <div class="header-right">
            <div class="notifications" id="notifications">
                <i class="fas fa-bell"></i>
                <span class="notification-badge" id="notificationCount">5</span>
            </div>
            <div class="user-info">
                <div class="user-avatar">A</div>
                <span class="user-name">Admin</span>
                <button class="logout-btn" id="logoutBtn">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <nav class="sidebar-nav">
            <ul>
                <li class="nav-item active">
                    <a href="/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/dashboard/usersmanagement" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/dashboard/roomsmanagement" class="nav-link">
                        <i class="fas fa-home"></i>
                        <span>Quản lý phòng trọ</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/contracts" class="nav-link">
                        <i class="fas fa-file-contract"></i>
                        <span>Quản lý hợp đồng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/payments" class="nav-link">
                        <i class="fas fa-money-bill-wave"></i>
                        <span>Quản lý thanh toán</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/feedback" class="nav-link">
                        <i class="fas fa-comments"></i>
                        <span>Phản hồi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/reports" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Báo cáo</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/settings" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>Cài đặt</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content" id="main-content">
        <!-- Dashboard Header -->
        <div class="dashboard-header fade-in">
            <h1>Dashboard Admin</h1>
            <p>Tổng quan hệ thống quản lý phòng trọ</p>
            <button class="btn btn-secondary" id="refreshDashboard">
                <i class="fas fa-sync-alt"></i>
                Làm mới dữ liệu
            </button>
        </div>

        <!-- Quick Stats -->
        <section class="dashboard-section">
            <div class="stats-grid fade-in">
                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Tổng người dùng</div>
                        <div class="stat-icon users">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="total-users">20</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Tổng phòng trọ</div>
                        <div class="stat-icon rooms">
                            <i class="fas fa-home"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="total-rooms">20</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Hợp đồng hiệu lực</div>
                        <div class="stat-icon contracts">
                            <i class="fas fa-file-contract"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="active-contracts">10</div>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <div class="stat-title">Doanh thu tháng này</div>
                        <div class="stat-icon revenue">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                    </div>
                    <div class="stat-value" id="monthly-revenue">10000000</div>
                </div>
            </div>
        </section>

        <!-- Pending Approvals Section -->
        <section class="dashboard-section">
            <h2 class="section-title">
                <i class="fas fa-clock"></i>
                Phòng chờ duyệt
            </h2>
            <form class="table-section pending-approvals glass-card">
                <div class="table-header">
                    <h3 class="table-title">Danh sách phòng chờ duyệt</h3>
                    <button class="btn btn-secondary" id="refreshPending">
                        <i class="fas fa-sync-alt"></i>
                        Làm mới
                    </button>
                </div>
                <table width="100%" id="pendingApprovals">
                    <thead>
                        <tr>
                            <th>Mã Phòng</th>
                            <th>Mã chủ nhà</th>
                            <th>Tiêu đề</th>
                            <th>Địa chỉ</th>
                            <th>Giá thuê</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Javascrip render from databases -->
                    </tbody>
                </table>
            </form>
        </section>

        <!-- Charts Section -->
        <section class="dashboard-section">
            <h2 class="section-title">
                <i class="fas fa-chart-line"></i>
                Biểu đồ thống kê
            </h2>
            <div class="charts-grid">
                <div class="chart-container glass-card">
                    <h3>Doanh thu 12 tháng gần nhất</h3>
                    <canvas id="revenueChart"></canvas>
                </div>
                <div class="chart-container glass-card">
                    <h3>Trạng thái phòng trọ</h3>
                    <canvas id="roomStatusChart"></canvas>
                </div>
            </div>
        </section>

        <!-- Recent Activities Section -->
        <section class="dashboard-section">
            <h2 class="section-title">
                <i class="fas fa-history"></i>
                Hoạt động gần đây
            </h2>
            <div class="recent-activities glass-card">
                <div class="loading" id="activitiesLoading">
                    <div class="spinner"></div>
                    Đang tải hoạt động gần đây...
                </div>
                <div id="recentActivitiesList" style="display: none;">
                    <!-- Activities will be loaded here -->
                </div>
            </div>
        </section>

        <!-- Management Overview Section -->
        <section class="dashboard-section">
            <h2 class="section-title">
                <i class="fas fa-tasks"></i>
                Tổng quan quản lý
            </h2>
            <div class="charts-grid">
                <!-- Current Contracts Table -->
                <div class="table-section glass-card">
                    <div class="table-header">
                        <h3 class="table-title">Hợp đồng hiện tại</h3>
                        <a href="/contracts" class="btn btn-primary">
                            <i class="fas fa-eye"></i>
                            Xem tất cả
                        </a>
                    </div>
                    <div class="table-container">
                        <table class="data-table" id="contractsTable">
                            <thead>
                                <tr>
                                    <th>Mã HĐ</th>
                                    <th>Phòng</th>
                                    <th>Người thuê</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="contractsTableBody">
                               <!-- Javascrip render from databases -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- System Overview -->
                <div class="glass-card">
                    <div class="table-header">
                        <h3 class="table-title">Tổng quan hệ thống</h3>
                    </div>
                    <div style="padding: 1rem 2rem;">
                        <div class="stats-grid" style="grid-template-columns: 1fr; gap: 1rem; margin-bottom: 0;">
                            <div class="approval-item">
                                <div class="approval-info">
                                    <strong>Phòng trống</strong><br>
                                    <span id="availableRoomsCount">-</span> phòng có sẵn
                                </div>
                                <div class="status-badge available">Có sẵn</div>
                            </div>
                            <div class="approval-item">
                                <div class="approval-info">
                                    <strong>Phòng đã thuê</strong><br>
                                    <span id="occupiedRoomsCount">-</span> phòng đang thuê
                                </div>
                                <div class="status-badge occupied">Đã thuê</div>
                            </div>
                            <div class="approval-item">
                                <div class="approval-info">
                                    <strong>Tỷ lệ lấp đầy</strong><br>
                                    <span id="occupancyRate">-</span>% phòng đang sử dụng
                                </div>
                                <div class="status-badge active">Tỷ lệ</div>
                            </div>
                            <div class="approval-item">
                                <div class="approval-info">
                                    <strong>Người dùng mới tháng này</strong><br>
                                    <span id="newUsersThisMonth">-</span> người dùng
                                </div>
                                <div class="status-badge pending">Mới</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Actions -->
        <section class="dashboard-section">
            <h2 class="section-title">
                <i class="fas fa-bolt"></i>
                Thao tác nhanh
            </h2>
            <div class="quick-actions glass-card">
                <div class="action-buttons">
                    <a href="/users" class="action-btn">
                        <i class="fas fa-user-plus"></i>
                        <span>Thêm người dùng mới</span>
                    </a>
                    <a href="/rooms" class="action-btn">
                        <i class="fas fa-home"></i>
                        <span>Thêm phòng trọ mới</span>
                    </a>
                    <a href="/contracts" class="action-btn">
                        <i class="fas fa-file-plus"></i>
                        <span>Tạo hợp đồng mới</span>
                    </a>
                    <a href="/payments" class="action-btn">
                        <i class="fas fa-money-bill-wave"></i>
                        <span>Ghi nhận thanh toán</span>
                    </a>
                    <a href="/reports" class="action-btn">
                        <i class="fas fa-chart-bar"></i>
                        <span>Xem báo cáo</span>
                    </a>
                    <a href="/settings" class="action-btn">
                        <i class="fas fa-cog"></i>
                        <span>Cài đặt hệ thống</span>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <script lang="javascripts" src="/js/dashboard.js"></script>
</body>
</html>