<!-- Main Content -->
<main class="main-content" id="main-content">
    <!-- Dashboard Header -->
    <div class="dashboard-header fade-in">
        <h1>Dashboard Admin</h1>
        <p>Tổng quan hệ thống quản lý lịch xem phòng trọ</p>
        <div class="header-actions">
            <button class="btn btn-secondary" id="refreshDashboard">
                <i class="fas fa-sync-alt"></i>
                Làm mới dữ liệu
            </button>
            <small id="lastUpdate" class="last-update-time"></small>
        </div>
    </div>

    <!-- Quick Stats -->
    <section class="dashboard-section">
        <div class="stats-grid fade-in">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Tổng người dùng</div>
                    <div class="stat-icon users">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="stat-value" id="total-users">-</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Tổng phòng trọ</div>
                    <div class="stat-icon rooms">
                        <i class="fas fa-home"></i>
                    </div>
                </div>
                <div class="stat-value" id="total-rooms">-</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Lịch xem phòng hôm nay</div>
                    <div class="stat-icon contracts">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
                <div class="stat-value" id="today-viewings">-</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Tổng lịch xem trong tháng</div>
                    <div class="stat-icon revenue">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
                <div class="stat-value" id="monthly-viewings">-</div>
            </div>
        </div>
    </section>

    <!-- Quản lý lịch xem phòng -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="fas fa-calendar-alt"></i>
            Quản lý lịch xem phòng
        </h2>
        <div class="table-section glass-card">
            <div class="table-header">
                <h3 class="table-title">Danh sách lịch xem phòng</h3>
                <div class="table-controls">
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="confirmed">Đã xác nhận</option>
                        <option value="completed">Hoàn thành</option>
                        <option value="cancelled">Đã hủy</option>
                    </select>
                    <button class="btn btn-secondary" id="refreshAllViewings">
                        <i class="fas fa-sync-alt"></i>
                        Làm mới
                    </button>
                </div>
            </div>
            <div class="table-container">
                <table class="data-table" id="allViewingsTable">
                    <thead>
                        <tr>
                            <th>Ngày tạo</th>
                            <th>Ngày xem</th>
                            <th>Thời gian</th>
                            <th>Người dùng</th>
                            <th>Phòng</th>
                            <th>Địa chỉ</th>
                            <th>Liên hệ</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="allViewingsBody">
                        <tr>
                            <td colspan="9">
                                <div class="loading">
                                    <div class="spinner"></div>
                                    Đang tải dữ liệu...
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Room Status Overview -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="fas fa-chart-pie"></i>
            Tình trạng phòng trọ
        </h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Phòng trống</div>
                    <div class="stat-icon available">
                        <i class="fas fa-door-open"></i>
                    </div>
                </div>
                <div class="stat-value" id="available-rooms">-</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Phòng đã thuê</div>
                    <div class="stat-icon occupied">
                        <i class="fas fa-door-closed"></i>
                    </div>
                </div>
                <div class="stat-value" id="occupied-rooms">-</div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Tỷ lệ lấp đầy</div>
                    <div class="stat-icon revenue">
                        <i class="fas fa-percentage"></i>
                    </div>
                </div>
                <div class="stat-value" id="occupancy-rate">-%</div>
            </div>
        </div>
    </section>

    <!-- Recent Activities Section -->
    <section class="dashboard-section">
        <h2 class="section-title">
            <i class="fas fa-history"></i>
            Hoạt động gần đây
        </h2>
        <div class="recent-activities glass-card">
            <div class="loading" id="activitiesLoading">
                <div class="spinner"></div>
                Đang tải hoạt động gần đây...
            </div>
            <div id="recentActivitiesList" style="display: none;">
                <!-- Activities will be loaded here -->
            </div>
        </div>
    </section>
</main>