<!-- Main Content -->
<main class="main-content" id="main-content">
    <!-- Header -->
    <div class="dashboard-header fade-in">
        <h1>Quản Lý Phòng Trọ</h1>
        <p>Quản lý thông tin, trạng thái và thao tác nhanh với các phòng trọ</p>
        <button class="btn btn-primary" id="addRoomBtn">
            <i class="fas fa-plus"></i>
            Thêm phòng mới
        </button>
    </div>

    <!-- Stats Grid -->
    <section class="dashboard-section">
        <div class="stats-grid fade-in">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Tổng phòng</div>
                    <div class="stat-icon rooms">
                        <i class="fas fa-home"></i>
                    </div>
                </div>
                <div class="stat-value" id="totalRoomsCount">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Phòng trống</div>
                    <div class="stat-icon available">
                        <i class="fas fa-door-open"></i>
                    </div>
                </div>
                <div class="stat-value" id="availableRoomsCount">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Phòng đã thuê</div>
                    <div class="stat-icon occupied">
                        <i class="fa-solid fa-door-closed"></i>
                    </div>
                </div>
                <div class="stat-value" id="occupiedRoomsCount">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-title">Doanh thu tháng</div>
                    <div class="stat-icon revenue">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
                <div class="stat-value" id="monthlyRevenue">-</div>
            </div>
        </div>
    </section>

    <!-- Controls -->
    <section class="dashboard-section">
        <div class="controls">
            <div class="controls-left">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input
                        type="text"
                        id="searchInput"
                        placeholder="Tìm kiếm phòng..."
                    />
                </div>
                <select id="statusFilter" class="filter-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="conTrong">Còn trống</option>
                    <option value="dangThue">Đang thuê</option>
                    <option value="daDuyet">Đã duyệt</option>
                    <option value="dangChoDuyet">Đang chờ duyệt</option>
                </select>
                <button class="btn btn-secondary" id="exportBtn">
                    <i class="fas fa-download"></i>
                    Xuất dữ liệu
                </button>
            </div>
            <div class="controls-right">
                <div class="view-toggle">
                    <button class="view-btn active" id="gridViewBtn">
                        <i class="fas fa-th"></i>
                    </button>
                    <button class="view-btn" id="listViewBtn">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Rooms Grid View -->
    <section class="dashboard-section" id="roomsGridSection">
        <div class="rooms-grid">
            <div class="loading">
                <div class="spinner"></div>
                Đang tải danh sách phòng...
            </div>
            <!-- Các room-card sẽ được render bằng JS -->
        </div>
    </section>

    <!-- Rooms Table View -->
    <section class="dashboard-section" id="roomsTableSection" style="display: none;">
        <div class="table-section glass-card">
            <div class="table-header">
                <h3 class="table-title">Danh sách phòng trọ</h3>
                <button class="btn btn-secondary" id="refreshRoomsBtn">
                    <i class="fas fa-sync-alt"></i>
                    Làm mới
                </button>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Mã phòng</th>
                            <th>Tên phòng</th>
                            <th>Địa chỉ</th>
                            <th>Giá thuê</th>
                            <th>Diện tích</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="roomsTableBody">
                        <tr>
                            <td colspan="7">
                                <div class="loading">
                                    <div class="spinner"></div>
                                    Đang tải dữ liệu...
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Pagination -->
        <div class="pagination" id="pagination">
            <!-- Pagination will be generated here -->
        </div>
    </section>

</main>

<!-- Add/Edit Room Modal -->
<div id="roomModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Thêm phòng mới</h3>
            <button class="close-btn" id="closeRoomModal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="roomForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="roomName">Tên phòng *</label>
                        <input type="text" id="roomName" required />
                    </div>
                    <div class="form-group">
                        <label for="roomOwner">Chủ nhà *</label>
                        <select id="roomOwner" required>
                            <option value="">Chọn chủ nhà...</option>
                            <!-- Options will be loaded dynamically -->
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="roomAddress">Địa chỉ *</label>
                        <input type="text" id="roomAddress" required />
                    </div>
                    <div class="form-group">
                        <label for="roomPrice">Giá thuê (VNĐ/tháng) *</label>
                        <input type="number" id="roomPrice" required min="0" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="roomArea">Diện tích (m²) *</label>
                        <input
                            type="number"
                            id="roomArea"
                            required
                            min="0"
                            step="0.1"
                        />
                    </div>
                    <div class="form-group">
                        <label for="electricPrice">Giá điện (VNĐ/kWh)</label>
                        <input type="number" id="electricPrice" min="0" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="waterPrice">Giá nước (VNĐ/m³)</label>
                        <input type="number" id="waterPrice" min="0" />
                    </div>
                    <div class="form-group">
                        <label for="internetPrice">Giá Internet (VNĐ/tháng)</label>
                        <input type="number" id="internetPrice" min="0" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="parkingPrice">Giá gửi xe (VNĐ/tháng)</label>
                        <input type="number" id="parkingPrice" min="0" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="roomStatus">Trạng thái</label>
                    <select id="roomStatus">
                        <option value="conTrong">Còn trống</option>
                        <option value="dangThue">Đang thuê</option>
                        <option value="daDuyet">Đã duyệt</option>
                        <option value="dangChoDuyet">Đang chờ duyệt</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="roomDescription">Mô tả</label>
                    <textarea
                        id="roomDescription"
                        rows="3"
                        placeholder="Mô tả chi tiết về phòng..."
                    ></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button
                type="button"
                class="btn btn-secondary"
                id="cancelRoomBtn"
            >Hủy</button>
            <button
                type="button"
                class="btn btn-primary"
                id="saveRoomBtn"
            >Lưu</button>
        </div>
    </div>
</div>

<!-- Room Details Modal -->
<div id="roomDetailsModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Chi tiết phòng</h3>
            <button class="close-btn" id="closeDetailsModal">&times;</button>
        </div>
        <div class="modal-body">
            <div id="roomDetailsContent">
                <!-- Room details will be loaded here -->
            </div>
        </div>
        <div class="modal-footer">
            <button
                type="button"
                class="btn btn-secondary"
                id="closeDetailsBtn"
            >Đóng</button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content small">
        <div class="modal-header">
            <h3>Xác nhận xóa</h3>
            <button class="close-btn" id="closeDeleteModal">&times;</button>
        </div>
        <div class="modal-body">
            <p>Bạn có chắc chắn muốn xóa phòng này không?</p>
            <p class="warning-text">Hành động này không thể hoàn tác!</p>
        </div>
        <div class="modal-footer">
            <button
                type="button"
                class="btn btn-secondary"
                id="cancelDeleteBtn"
            >Hủy</button>
            <button
                type="button"
                class="btn btn-danger"
                id="confirmDeleteBtn"
            >Xóa</button>
        </div>
    </div>
</div>

<script>
// Additional event listeners for modal close buttons
document.addEventListener('DOMContentLoaded', function() {
    // Close details modal
    document.getElementById('closeDetailsModal').addEventListener('click', () => {
        document.getElementById('roomDetailsModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    });
    
    document.getElementById('closeDetailsBtn').addEventListener('click', () => {
        document.getElementById('roomDetailsModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    });
    
    // Close delete modal
    document.getElementById('closeDeleteModal').addEventListener('click', () => {
        document.getElementById('deleteModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    });
    
    document.getElementById('cancelDeleteBtn').addEventListener('click', () => {
        document.getElementById('deleteModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    });
});
</script>

<!-- Load rooms management specific JavaScript -->
<script src="/js/roomsManagement.js"></script>